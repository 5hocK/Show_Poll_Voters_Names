function poll_voters_names($topic_id, $poll_option_id)
{
	global $db;

	if (!isset($topic_id)) return;
	if (!isset($poll_option_id)) return;

	$sql_array = array(
		'SELECT'	=> 'pv.poll_option_id, pv.vote_user_id, u.username, u.user_colour',

		'FROM'		=> array(
			POLL_VOTES_TABLE	=> 'pv',
		),

		'LEFT_JOIN'	=> array(
			array(
				'FROM'	=> array(USERS_TABLE => 'u'),
				'ON'	=> 'pv.vote_user_id = u.user_id'
			)
		),

		'WHERE'		=> 'pv.topic_id = ' . (int)$topic_id . '
			AND pv.show_voter_name = 1
			AND pv.poll_option_id = ' . (int)$poll_option_id,

		'ORDER_BY'	=> 'pv.poll_option_id ASC'
	);
	$sql = $db->sql_build_query('SELECT', $sql_array);
	$result = $db->sql_query($sql);

	$poll_voters = '';
	while ($row = $db->sql_fetchrow($result))
	{
		$poll_voters .= get_username_string('full', $row['vote_user_id'], $row['username'], $row['user_colour'], $guest_username = false, $custom_profile_url = false) . ', '; 
	}
	$db->sql_freeresult($result);
	$poll_voters = substr($poll_voters, 0 , -2);
	return $poll_voters;
}]]></action>
